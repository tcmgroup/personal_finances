<odoo>
    <data noupdate="1">

        <!-- Application Category -->
        <record id="module_category_personal_finances" model="ir.module.category">
            <field name="name">Personal Finances</field>
            <field name="description">Helps you manage your personal finances.</field>
            <field name="sequence">20</field>
        </record>

        <!-- Group -->
        <record id="group_personal_finances_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_personal_finances"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

    </data>
    <data>
        <!-- Record Rule for personal_finances.transaction -->
        <record id="personal_finances_transaction_user_rule" model="ir.rule">
            <field name="name">Personal Finances Transaction User Rule</field>
            <field name="model_id" ref="model_personal_finances_transaction"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_personal_finances_user'))]"/>
        </record>

        <!-- Record Rule for personal_finances.tag -->
        <record id="personal_finances_tag_user_rule" model="ir.rule">
            <field name="name">Personal Finances Tag User Rule</field>
            <field name="model_id" ref="model_personal_finances_tag"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_personal_finances_user'))]"/>
        </record>

        <!-- Record Rule for bank.account -->
        <record id="bank_account_user_rule" model="ir.rule">
            <field name="name">Bank Account User Rule</field>
            <field name="model_id" ref="model_bank_account"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_personal_finances_user'))]"/>
        </record>
    </data>
</odoo>
